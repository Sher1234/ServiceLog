<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6f6f6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/bar_shadow"
        android:rotation="180" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.05"
        android:contentDescription="@string/app_name"
        android:padding="50dp"
        android:src="@raw/logo" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_weight="1"
        android:background="@color/gWhite"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:text="@string/sign_next"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
        android:textColor="@color/gPurpleDark"
        android:textSize="14sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="?attr/actionBarSize"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        tools:listitem="@layout/form_element" />

    <View
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignBottom="@id/toolbar"
        android:layout_gravity="bottom"
        android:background="@drawable/bar_shadow" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="@color/gWhite"
        android:gravity="center_vertical|end"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <android.support.design.button.MaterialButton
            android:id="@+id/button1"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="4dp"
            android:text="@string/reset"
            android:textColor="@color/gRed"
            app:textAllCaps="false" />

        <android.support.design.button.MaterialButton
            android:id="@+id/button2"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="6dp"
            android:text="@string/register_visit"
            app:textAllCaps="false" />


    </android.support.v7.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bar_shadow"
        android:rotation="180" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gWhite"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="4dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageView1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:longClickable="true"
            android:tint="@color/gPurpleDark"
            app:srcCompat="@drawable/ic_back" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="@string/register_visit"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="@color/gPurpleDark"
            android:textSize="16.5sp" />

        <View
            android:layout_width="32dp"
            android:layout_height="32dp" />

    </android.support.v7.widget.LinearLayoutCompat>

    <FrameLayout
        android:id="@+id/progressView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#a8ffffff"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        tools:visibility="gone">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/loading"
                android:textColor="@color/gPurpleDark" />

            <ProgressBar
                style="@style/AppTheme.Progress"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:indeterminate="true"
                android:theme="@style/AppTheme.Progress" />

        </android.support.v7.widget.LinearLayoutCompat>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>