<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:statusBarColor">@color/textLight</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="Application" parent="Theme.MaterialComponents.Light">
        <item name="android:statusBarColor">@color/green</item>
        <item name="colorAccent">@color/green</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Application.Error" parent="Application">
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/textLight</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="Application.Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="AppTheme.Progress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/blue</item>
    </style>

