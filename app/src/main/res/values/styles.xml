    <style name="TextAppearance.Navigation.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14.5sp</item>
    </style>

    <style name="TextAppearance.TabLayout.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">16.5sp</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/textLight</item>
        <item name="fontFamily">sans-serif-smallcaps</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:indeterminateDrawable">@drawable/rating_bar</item>
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:isIndicator">false</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
        <item name="android:thumb">@null</item>
    </style>

