<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimaryDark">@color/gWhite</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/gBlue</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/gWhite</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/gBlue</item>
    </style>

    <style name="AppTheme.NoActionBar.View" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.BottomBar.Dark" parent="AppTheme.BottomBar">
        <item name="android:textColorSecondary">@color/gWhite</item>
    </style>

    <style name="AppTheme.BottomBar" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:textColorSecondary">@color/gBlue</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/gBlue</item>
    </style>

    <style name="AppTheme.Progress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorAccent">@color/gBlue</item>
    </style>

    <style name="AppTheme.Progress.Green" parent="AppTheme.Progress">
        <item name="colorAccent">@color/gGreen</item>
    </style>

</resources>